                        <DatePicker fx:id="endDatePicker" onAction="#selectEndDateHandler" promptText="Select End Date" GridPane.columnIndex="1" GridPane.rowIndex="10" />
                        <Label fx:id="EndTime" text="End Time:" GridPane.rowIndex="11">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="endTimeComboBox" prefWidth="150.0" promptText="Select End Time" GridPane.columnIndex="1" GridPane.rowIndex="11" />
                        <ComboBox fx:id="userIDComboBox" prefWidth="150.0" promptText="Select User" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <ComboBox fx:id="customerComboBox" prefWidth="150.0" promptText="Select Customer" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                    <VBox.margin>
                        <Insets left="100.0" top="20.0" />
                    </VBox.margin>
                </GridPane>
                <ButtonBar maxWidth="200.0" prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonHandler" style="-fx-font-style: 0;" text="Save" />
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearButtonHandler" text="Clear" />
                        <Button fx:id="cancelButton" layoutX="506.0" layoutY="224.0" mnemonicParsing="false" onAction="#cancelButtonHandler" prefHeight="25.0" prefWidth="80.0" text="Back" />
                    </buttons>
