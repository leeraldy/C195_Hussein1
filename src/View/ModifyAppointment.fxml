                        <TableView fx:id="customerTableView" maxWidth="225.0" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="customerIDColumn" minWidth="75.0" prefWidth="75.0" text="Customer ID" />
